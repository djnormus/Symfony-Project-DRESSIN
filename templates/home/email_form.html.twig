{% extends 'base.html.twig' %}


{% block title %}
	{{ parent() }}
	Formulaire de contact
{% endblock %}

{% block titre %}
	Formulaire de contact
{% endblock %}


{% block body %}

	<div class="container col-lg-6 pb-5">
		<form id="contact-form" method="post" action="{{ path('emailSend') }}" role="form">
			<div class="form-group">
				<label for="name" class="form-label mt-4">Prénom</label>
				<input name="name" type="text" class="form-control" id="name" aria-describedby="emailHelp" placeholder="Veuillez saisir votre Prénom" required>
			</div>
			<div class="form-group">
				<label for="surname" class="form-label mt-4">Nom</label>
				<input name="surname" type="text" class="form-control" id="surname" aria-describedby="emailHelp" placeholder="Veuillez saisir votre Nom" required>
			</div>
			<div class="form-group">
				<label for="email" class="form-label mt-4">E-mail</label>
				<input name="email" type="email" class="form-control" id="email" placeholder="Veuillez saisir votre e-mail" required>
			</div>
			<div class="form-group">
				<label for="form_need" class="form-label mt-4">Spécifiez l'objet de votre mail</label>
				<select name="need" class="form-select" id="form_need" data-error="Spécifiez l'objet de votre mail" required>
					<option value="Reclamation">Réclamation</option>
					<option value="Informations">Informations</option>
					<option value="Autre">Autre</option>
				</select>
			</div>
			<div class="form-group">
				<label for="message" class="form-label mt-4">Message</label>
				<textarea name="message" class="form-control" id="message" rows="3" placeholder="Votre message..."></textarea>
			</div>
			<button type="submit" class="btn btn-primary rounded mt-4">Envoyer</button>
		</form>
	</div>

{% endblock %}
