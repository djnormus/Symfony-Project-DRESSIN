{% extends 'base.html.twig' %}


{% block title %}
	{{ parent() }}
	Inscription
{% endblock %}

{% block titre %}
	Inscription
{% endblock %}


{% block body %}
	
{############### FORMULAIRE D'INSCRIPTION #################}

<div class="container col-lg-6 pb-5">
		{{form_start(form)}}

		<label for="">Nom</label>
		{{form_row(form.lastName)}}

		<label for="">Prénom</label>
		{{form_row(form.firstName)}}

		<label for="">Pseudo</label>
		{{form_row(form.username)}}

		<label for="">E-mail</label>
		{{form_row(form.email)}}

		<label for="">Numéro de téléphone</label>
		{{form_row(form.phone)}}

		<label for="">Mot de passe</label>
		{{ form_row(form.password) }}

		<label for="">Confirmation du mot de passe</label>
		{{form_row(form.confirmPassword)}}

		<label for="">Numéro de la voie</label>
		{{form_row(form.streetNumber)}}

		<label for="">Nom de la voie</label>
		{{form_row(form.street)}}

		<label for="">Code postal</label>
		{{form_row(form.zipCode)}}

		<label for="">Ville</label>
		{{form_row(form.city)}}

		<div class="mt-4">
			{{form_row(form.Enregistrer, { 'attr':{'class':'btn btn-primary rounded '}})}} 
		</div>
		<div>
			
			<p>vous avez déjà un compte?<a href=" {{ path('login') }} "> Connectez-vous</a></p>
		</div>
		{{form_end(form)}}
	</div>


	
{% endblock %}
