{% extends 'panelAdmin.html.twig' %}


{% block title %}
	{{ parent() }}{{ titre }}
{% endblock %}

{% block titre %}
	{{ titre }}
{% endblock %}


{% block body %}


	{{ form(form)}}


		<div class="table-responsive mt-5">
			<table class="table table-hover">
				<thead>
					<tr class="table-dark">
						<th scope="col">#</th>
						<th scope="col">Nom</th>
						<th scope="col">Cat√©gorie</th>
						<th scope="col">Action</th>
					</tr>
				</thead>
				<tbody>

					{% for category in categories %}

						<tr>
							<th scope="row">{{category.id}}</th>
							<td>{{ category.title}}</td>
							<td>{{ category.subCategory.title}}</td>
							<td>
								<a href=" {{ path('editCategory', { id:category.id }) }} "><img src="{{ asset('update.png') }}" alt="modifier"></a>
								<a href=" {{ path('deleteCategory', { id:category.id }) }} " onclick="return confirm('Etes vous sur de vouloir supprimer cet categorie ?')"><img src="{{ asset('delete.png') }}" alt="supprimer"></a>
							</td>
						</tr>

					{% endfor %}


				</tbody>
			</table>
		</div>


	{% endblock %}
